{
  "name": "rpg-helper",
  "version": "0.0.0",
  "main": "dist/server.js",
  "repository": "https://github.com/kacpak/rpg-helper.git",
  "author": "Mateusz Kasprzak <kacpak@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "clean": "rimraf dist",
    "dev": "yarn run clean && run-p -c dev:*",
    "dev:compile-server": "babel src --out-dir dist --ignore app --watch --source-maps inline",
    "dev:run-server": "wait-on dist/server.js && nodemon dist/server.js -w dist -e js -i dist/public",
    "build": "cross-env NODE_ENV=production run-s clean build:*",
    "build:compile-server": "babel src --out-dir dist --ignore app",
    "build:compile-app": "webpack --config dist/webpack.config.js",
    "lint": "eslint src"
  },
  "bin": {
    "rpg-helper": "./cli.js"
  },
  "files": [
    "dist",
    "migrations",
    "cli.js"
  ],
  "devDependencies": {
    "bootstrap": "4.0.0-alpha.6",
    "cross-env": "^5.0.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "vue-resource": "^1.3.1",
    "wait-on": "^2.0.2"
  },
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.5.0",
    "babili-webpack-plugin": "^0.0.11",
    "body-parser": "^1.17.2",
    "connect-sqlite3": "^0.9.9",
    "cookie-parser": "^1.4.3",
    "css-loader": "^0.28.1",
    "dotenv": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-loader": "^1.7.1",
    "express": "^4.15.3",
    "express-history-api-fallback": "^2.2.1",
    "express-session": "^1.15.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "mkdirp": "^0.5.1",
    "morgan": "^1.8.1",
    "node-sass": "^4.5.3",
    "passport": "^0.3.2",
    "passport-jwt": "^2.2.1",
    "sass-loader": "^6.0.5",
    "socket.io": "^2.0.1",
    "socketio-jwt": "^4.5.0",
    "sqlite": "^2.8.0",
    "style-loader": "^0.17.0",
    "uglify-js": "git://github.com/mishoo/UglifyJS2#harmony-v2.8.22",
    "url-loader": "^0.5.8",
    "vue": "^2.3.3",
    "vue-loader": "^12.1.0",
    "vue-router": "^2.5.3",
    "vue-template-compiler": "^2.3.3",
    "vuex": "^2.3.1",
    "webpack": "^2.5.1",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-hot-middleware": "^2.18.0",
    "webpack-merge": "^4.1.0"
  }
}
